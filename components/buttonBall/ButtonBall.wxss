.boll-btn-wrapper {
    position: absolute;
    bottom: 18rpx;
    right: 20rpx;
    display: flex;
    height: 40rpx;
    line-height: 40rpx;
}
.reduce, .add {
    flex: 0 0 40rpx;
    width: 40rpx;
    height: 40rpx;
    border-radius: 50%;
    text-align: center;
    line-height: 36rpx;
    border: 1rpx solid #ff6e40;
    color: #ff6e40;
}
.reduce {
    font-size: 48rpx;
}
.add {
    font-size: 36rpx;
    color: #fff;
    background: #ff6e40;
}
.countnum {
    padding: 0 20rpx;
}