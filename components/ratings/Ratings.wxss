/* ======评价==== */
.container-ratings {
  width: 100%;
}
.seller-ratings {
  display: flex;
  padding: 30rpx 10rpx;
  text-align: center;
  font-size: 20rpx;
}
.score {
  color: #ff6e40;
}
.seller-ratings > view {
  flex: 1;
}
.star-score {
  vertical-align: middle;
}
.star-score > text {
  display: block;
  font-size: 24rpx;
  padding-bottom: 6rpx;
}
.score {
  font-size: 64rpx;
}
.score-content {
  vertical-align: center;
  color: rgba(7, 17, 27, 0.8);
}
.score-content.last {
  border-left: 2rpx solid rgba(7, 17, 27, 0.1);
}
.score-content text {
  display: block;
}
.score-num {
  font-size: 44rpx;
}
/* 空白分割栏 */
.white-space {
  width: 100%;
  height: 10rpx;
  background: rgb(243, 245, 247);
}
/* 评论外盒子 */
.container-ratings-wrapper {
  padding: 0 20rpx;
}
/* 评论分类按钮  */
.select-btn-wrapper {
  display: flex;
  justify-content: flex-start;
  padding: 20rpx 0;
  border-bottom: 1rpx solid rgba(7, 17, 27, 0.2);
}
.select-btn,.btn-dislike {
  flex: 0 0 120rpx;
  width: 120rpx;
  height: 60rpx;
  margin-right: 16rpx;
  line-height: 60rpx;
  text-align: center;
  border-radius: 6rpx;
  font-size: 28rpx;
}
.select-btn {
  background: #ffccbc;
  color: rgba(7, 17, 27, 0.7);
}
.select-btn.active {
  background: #ff6e40;
}
.btn-dislike {
  background: rgb(205, 205, 205);
  color: #fff;
}
.btn-dislike.active {
  background: #999;
}
.count {
  font-size: 24rpx;
  color: rgba(7, 17, 27, 0.6);
}
.btn-dislike .count {
  font-size: 24rpx;
  color: #fff;
}
.valueable-ratings {
  padding: 20rpx 0;
  font-size: 28rpx;
  border-bottom: 1rpx solid rgba(7, 17, 27, 0.1);
  color: rgba(7, 17, 27, 0.8);
}
/* 评价详情列表 */
.user-rating {
  position: relative;
  padding: 30rpx 0 20rpx;
  display: flex;
  border-bottom: 1rpx solid rgba(7, 17, 27, 0.1);
}
.user-avatar {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
}
.user-desc {
  padding: 0 20rpx;
  flex: 1;
}
.username {
  font-size: 24rpx;
  color: rgba(7, 17, 27, 0.9);
}
.user-score {
  font-size: 24rpx;
  color: #ff6e40;
}
.user-text {
  font-size: 24rpx;
  color: rgba(7, 17, 27, 0.9);
}
.recommend-wrapper {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
}
.recommend {
  display: inline-block;
  padding: 2rpx 8rpx;
  margin-right: 8rpx;
  height: 30rpx;
  line-height: 30rpx;
  text-align: center;
  border-radius: 4rpx;
  font-size: 18rpx;
  background: #ffccbc;
  color: rgba(7, 17, 27, 0.6);
}
.recommend:nth-last-child(1) {
  margin: 0;
}
.rateTime {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  font-size: 20rpx;
  color: rgba(7, 17, 27, 0.6);
}
